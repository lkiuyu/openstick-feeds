#!/bin/sh
# Hotplug script for QMI modem initialization

[ "$ACTION" = "add" -a "$INTERFACE" = "wwan0" ] || exit 0

# Wait a moment for the interface to be fully up
sleep 5

# Check if this is a QMI device
if [ -c "/dev/wwan0qmi0" ]; then
    logger -t qmi-modem-init "QMI device detected, running initialization"
    /usr/bin/qmi-modem-410-init &
fi

exit 0
